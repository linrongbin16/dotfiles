;; Press Left-Control + Space + Esc to quit

(defcfg
  process-unmapped-keys yes
  concurrent-tap-hold yes
)

(defsrc
  esc  f1   f2   f3   f4   f5   f6   f7   f8   f9   f10  f11  f12
  grv  1    2    3    4    5    6    7    8    9    0    -    =    bspc
  tab  q    w    e    r    t    y    u    i    o    p    [    ]    \
  caps a    s    d    f    g    h    j    k    l    ;    '    ret
  lsft z    x    c    v    b    n    m    ,    .    /    rsft
  lctl lmet lalt           spc            ralt rmet rctl
)

(defvar
  tap-time 180
  hold-time 180

  left-hand-keys (
    q w e r t
    a s d f g
    z x c v b
  )
  right-hand-keys (
    y u i o p
    h j k l ;
    n m , . /
  )
)

(defalias
  tap (multi
    (layer-switch nomods)
    (on-idle-fakekey to-base tap 20)
  )

  s (tap-hold-release-keys $tap-time $hold-time (multi s @tap) lalt $left-hand-keys)
  d (tap-hold-release-keys $tap-time $hold-time (multi d @tap) lctl $left-hand-keys)
  f (tap-hold-release-keys $tap-time $hold-time (multi f @tap) lsft $left-hand-keys)

  j (tap-hold-release-keys $tap-time $hold-time (multi j @tap) rsft $right-hand-keys)
  k (tap-hold-release-keys $tap-time $hold-time (multi k @tap) rctl $right-hand-keys)
  l (tap-hold-release-keys $tap-time $hold-time (multi l @tap) ralt $right-hand-keys)

  to1 (layer-switch base)
  to2 (layer-switch num)
  to3 (layer-switch sym)
  to4 (layer-switch fun)
  mo2 (layer-while-held num)
  mo3 (layer-while-held sym)
)

(deffakekeys
  to-base (layer-switch base)
)

(deflayer base
  _    _    _    _    _    _    _    _    _    _    _    _    _
  _    @to1 @to2 @to3 @to4 _    _    _    _    _    _    _    _    _
  _    _    _    _    _    _    _    _    _    _    _    _    _    _
  esc  _    @s   @d   @f   _    _    @j   @k   @l   _    _    _
  _    _    _    _    _    _    _    _    _    _    _    _
  _    _    @mo2           _              @mo3 _    _
)

(deflayer nomods
  _    _    _    _    _    _    _    _    _    _    _    _    _
  _    @to1 @to2 @to3 @to4 _    _    _    _    _    _    _    _    _
  _    _    _    _    _    _    _    _    _    _    _    _    _    _
  esc  _    s    d    f    _    _    j    k    l    _    _    _
  _    _    _    _    _    _    _    _    _    _    _    _
  _    _    @mo2           _              @mo3 _    _
)

(deflayer num
  _    _    _    _    _    _    _    _    _    _    _    _    _
  _    @to1 @to2 @to3 @to4 _  _    _    _    _    _    _    _    _
  grv  _    _    _    _    _    _    _    _    _    _    _    _    _
  esc  1    2    3    4    5    6    7    8    9    0    _    _
  _    _    _    _    _    _    _    _    _    _    _    _
  _    _    _              _              _    _    _
)

(deflayer sym
  _    _    _    _    _    _    _    _    _    _    _    _    _
  _    @to1 @to2 @to3 @to4 _  _    _    _    _    _    _    _    _
 S-grv _    _    _    _    _    _    _    _    _    _    _    _    _
  esc  !    @    #    $    %    ^    &    *    (    )    _    _
  _    _    _    _    _    _    _    _    _    _    _    _
  _    _    _              _              _    _    _
)

(deflayer fun
  _    _    _    _    _    _    _    _    _    _    _    _    _
  _    @to1 @to2 @to3 @to4 _  _    _    _    _    _    _    _    _
  _    _    _    _    _    _    _    _    _    _    _    _    _    _
  _    f1   f2   f3   f4   f5   f6   f7   f8   f9   f10  _    _
  _    _    _    _    _    f11  f12   _    _    _    _    _
  _    _    _              _              _    _    _
)


